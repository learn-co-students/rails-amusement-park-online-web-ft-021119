<div class="center">
  <div class="info">
    <p><strong>Name:</strong> <%= @attraction.name %> </p>
    <p><strong>Total Number of Users:</strong> <%= @attraction.id %></p>
    <p><strong>Ticket Requiremenet:</strong> <%= @attraction.tickets %></p>
    <p><strong>Heigh Requirements:</strong> <%= @attraction.min_height %> inches </p>
    <p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %> inches </p>
    <p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %> inches </p>

    <% if @user.admin? %>
      <%= link_to "Edit Attraction", edit_attraction_path(@attraction)%>
    <% else %>
      <div class="new_ride">
      <%= form_for(@ride, url: rides_path) do |f| %>
        <%= f.hidden_field :user_id, value: session[:user_id] %>
        <%= f.hidden_field :attraction_id, value: @attraction.id %>
        <%= f.submit "Go on this ride" %>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
